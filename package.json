{
  "name": "bonvoy",
  "version": "0.0.0",
  "private": true,
  "description": "ðŸš¢ Plugin-based release automation tool for npm packages and monorepos",
  "keywords": [
    "automation",
    "changelog",
    "cli",
    "conventional-commits",
    "git",
    "github",
    "monorepo",
    "npm",
    "plugin",
    "publish",
    "release",
    "semantic-release",
    "versioning",
    "workspace"
  ],
  "homepage": "https://github.com/Zweer/bonvoy#readme",
  "bugs": {
    "url": "https://github.com/Zweer/bonvoy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zweer/bonvoy.git"
  },
  "license": "MIT",
  "author": {
    "name": "Zweer",
    "email": "n.olivieriachille@gmail.com"
  },
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsdown && npx tsx scripts/generate-schema.ts",
    "changeset": "changeset",
    "clean": "rimraf --glob packages/**/dist",
    "prelint": "npm run build",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "postlint": "npm run clean",
    "lint:engines": "ls-engines",
    "lint:format": "biome check --write",
    "lint:lockfile": "lockfile-lint",
    "lint:package": "npmPkgJsonLint .",
    "lint:sort_package": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "lint:typecheck": "tsc --noEmit",
    "prepare": "husky",
    "release": "changeset publish",
    "pretest": "npm run build",
    "test": "vitest run",
    "posttest": "npm run clean",
    "pretest:coverage": "npm run build",
    "test:coverage": "vitest run --coverage",
    "posttest:coverage": "npm run clean && coverage-badge-readme",
    "version": "changeset version"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "cosmiconfig": "^9.0.0",
    "deepmerge": "^4.3.1",
    "execa": "^9.6.1",
    "jiti": "^2.6.1",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@biomejs/biome": "^2.3.11",
    "@bonvoy/cli": "^0.0.0",
    "@bonvoy/core": "^0.0.0",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@tsconfig/node24": "^24.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@zweer/coverage-badge-readme": "^1.2.2",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^4.14.1",
    "ls-engines": "^0.10.0",
    "memfs": "^4.51.1",
    "npm-package-json-lint": "^9.1.0",
    "npm-package-json-lint-config-default": "^8.0.1",
    "publint": "^0.3.16",
    "rimraf": "^6.1.2",
    "sort-package-json": "^3.6.0",
    "tsdown": "^0.18.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">= 20.5"
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm"
    ]
  }
}
