{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "versioning": {
      "default": "independent",
      "type": "string",
      "enum": [
        "independent",
        "fixed"
      ]
    },
    "rootVersionStrategy": {
      "default": "max",
      "type": "string",
      "enum": [
        "max",
        "patch",
        "none"
      ]
    },
    "commitMessage": {
      "default": "chore: release {packages}",
      "type": "string"
    },
    "tagFormat": {
      "default": "{name}@{version}",
      "type": "string"
    },
    "changelog": {
      "default": {
        "global": false,
        "sections": {
          "feat": "‚ú® Features",
          "fix": "üêõ Bug Fixes",
          "perf": "‚ö° Performance",
          "docs": "üìö Documentation",
          "breaking": "üí• Breaking Changes"
        }
      },
      "type": "object",
      "properties": {
        "global": {
          "default": false,
          "type": "boolean"
        },
        "sections": {
          "default": {
            "feat": "‚ú® Features",
            "fix": "üêõ Bug Fixes",
            "perf": "‚ö° Performance",
            "docs": "üìö Documentation",
            "breaking": "üí• Breaking Changes"
          },
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "global",
        "sections"
      ],
      "additionalProperties": false
    },
    "workflow": {
      "default": "direct",
      "type": "string",
      "enum": [
        "direct",
        "pr"
      ]
    },
    "baseBranch": {
      "default": "main",
      "type": "string"
    },
    "conventional": {
      "default": {
        "preset": "angular"
      },
      "type": "object",
      "properties": {
        "preset": {
          "default": "angular",
          "type": "string",
          "enum": [
            "angular",
            "conventional",
            "atom",
            "custom"
          ]
        },
        "types": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string",
            "enum": [
              "major",
              "minor",
              "patch",
              "none"
            ]
          }
        }
      },
      "required": [
        "preset"
      ],
      "additionalProperties": false
    },
    "git": {
      "default": {
        "push": true
      },
      "type": "object",
      "properties": {
        "commitMessage": {
          "type": "string"
        },
        "tagFormat": {
          "type": "string"
        },
        "push": {
          "default": true,
          "type": "boolean"
        }
      },
      "required": [
        "push"
      ],
      "additionalProperties": false
    },
    "npm": {
      "default": {
        "registry": "https://registry.npmjs.org",
        "access": "public",
        "dryRun": false,
        "skipExisting": true,
        "provenance": true
      },
      "type": "object",
      "properties": {
        "registry": {
          "default": "https://registry.npmjs.org",
          "type": "string"
        },
        "access": {
          "default": "public",
          "type": "string",
          "enum": [
            "public",
            "restricted"
          ]
        },
        "dryRun": {
          "default": false,
          "type": "boolean"
        },
        "skipExisting": {
          "default": true,
          "type": "boolean"
        },
        "provenance": {
          "default": true,
          "type": "boolean"
        }
      },
      "required": [
        "registry",
        "access",
        "dryRun",
        "skipExisting",
        "provenance"
      ],
      "additionalProperties": false
    },
    "github": {
      "default": {
        "draft": false
      },
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        },
        "draft": {
          "default": false,
          "type": "boolean"
        },
        "prerelease": {
          "type": "boolean"
        }
      },
      "required": [
        "draft"
      ],
      "additionalProperties": false
    },
    "gitlab": {
      "default": {},
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "projectId": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "plugins": {
      "default": [],
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "prefixItems": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "propertyNames": {
                  "type": "string"
                },
                "additionalProperties": {}
              }
            ]
          }
        ]
      }
    }
  },
  "additionalProperties": false,
  "$id": "https://bonvoy.dev/schema.json",
  "title": "bonvoy Configuration",
  "description": "Configuration schema for bonvoy release automation tool"
}
